{
  "name": "@readytools/codeblock",
  "version": "0.0.3",
  "description": "Ultra-modern, zero-dep React CodeBlock component with copy/insert, themes, line numbers, highlights.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "dist/style.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/readytoolscode/codeblock.git"
  },
  "bugs": {
    "url": "https://github.com/readytoolscode/codeblock/issues"
  },
  "homepage": "https://github.com/readytoolscode/codeblock#readme",
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "build": "node scripts/gen-css.mjs && tsup src/index.js --format cjs,esm --minify --clean --sourcemap",
    "dev": "node scripts/gen-css.mjs && tsup src/index.js --format cjs,esm --watch"
  }
}
